<%- include('../includes/Head.ejs') %>
<link rel="stylesheet" href="styles/Login/login.css">
</head>

<body>


    <%- include('../includes/Navigation.ejs') %>
    <div class="container">

        <div class="row">
            <div class="title-account">
                <h3> ĐĂNG NHẬP </h3>
            </div>
        </div>

        <div class="row">
            <div class="login">

                <div class="form-login">
                    <% if(ErrorMassage) { %>

                        <div class="user-message user-message--error"><%=ErrorMassage %></div>

                    <% } %> 
                    
                    <form action="/Login" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control <%=(ValidationError.find( e => e.param  === 'email')  ? 'invalid' :'' ) %>" name="email" value="<%=oldInput.Email %>" id="exampleInputEmail1"
                                placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" name="password" class="form-control <%=(ValidationError.find( e => e.param  === 'password')  ? 'invalid' :'' )%>" value="<%=oldInput.Password %>" id="exampleInputPassword1"
                                placeholder="Password">
                        </div>                        
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>

                </div>
            </div>

        </div>
    </div>

    <%- include('../includes/End.ejs') %>